<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/suikiBlue"
        android:navigationIcon="@mipmap/back"
        android:id="@+id/toolbar"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"></Toolbar>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/cpb_red"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:id="@+id/chronometer"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@mipmap/giphy"
        android:id="@+id/gif"
        android:layout_below="@id/chronometer"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/suikiFichesColorBlue"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/nom_exercice"
        android:layout_alignParentBottom="true"/>


    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="@mipmap/arrow_left2"
        android:id="@+id/arrow_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/nom_exercice" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/arrow_right2"
        android:id="@+id/arrow_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/play"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>