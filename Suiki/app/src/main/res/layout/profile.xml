<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


  <!-- Footer aligned to bottom -->

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="424dp">

      <TextView
        android:text="Nom Prénom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nom"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginBottom="29dp" />

      <ImageView
        android:layout_width="124dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView2" />

      <TextView
        android:text="Date de Naissance :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateNaissance"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/nom"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/poids"
        android:text="Poids :"
        android:layout_below="@+id/dateNaissance"
        android:layout_alignStart="@+id/dateNaissance" />

      <TextView
        android:text="Taille :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/taille"
        android:layout_below="@+id/poids"
        android:layout_alignStart="@+id/poids" />

      <TextView
        android:text="Adresse :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adresse"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/taille"
        android:layout_alignStart="@+id/taille" />

      <TextView
        android:text="E-mail :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/adresse"
        android:layout_alignStart="@+id/adresse"
        android:layout_marginTop="25dp" />

      <TextView
        android:text="N° Tel :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tel"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="25dp" />

      <TextView
        android:text="Symptomes :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:id="@+id/symptomes"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tel" />
    </RelativeLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:weightSum="3"
    android:background="@color/black10">
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="2.5dp"
      android:text="calendrier"
      android:textColor="@color/black10"
      android:background="@color/colorAccent"
      android:id="@+id/calendrier"
      android:contextClickable="false" />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Exercice"
      android:layout_marginLeft="2.5dp"
      android:layout_marginRight="2.5dp"
      android:textColor="@color/black10"
      android:background="@color/colorAccent"
      android:id="@+id/exercice"/>
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="2.5dp"
      android:layout_marginRight="5dp"
      android:text="Profile"
      android:textColor="@color/black10"
      android:background="@color/colorAccent"
      android:id="@+id/profile"/>
  </LinearLayout>

</RelativeLayout>
